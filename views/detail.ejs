<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact Details</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Contact data cannot be found.
        <a href="/contact" class="alert-link fw-normal">
          <br />
          &laquo; back to contacts list
        </a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.phone %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.id %>" class="btn btn-info badge"> Edit </a>
          <form action="/contact?_method=DELETE" method="post" class="d-inline">
            <input type="hidden" name="id" value="<%= contact.id %>" />
            <button class="btn btn-danger badge" onclick="return confirm('Are you sure?')">
              Delete
            </button>
          </form>
          <br />
          <a href="/contact" class="card-link d-block mt-3">&laquo; Back to Contacts List</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
